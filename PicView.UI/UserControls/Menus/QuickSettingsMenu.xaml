                        Stretch="Fill" />
                </Button>

                <uc:MenuCloseButton
                    x:Name="CloseButton"
                    Canvas.Left="261"
                    ToolTip="Close" />

                <CheckBox
                    x:Name="SetFit"
                    Canvas.Left="15"
                    Canvas.Top="61"
                    Width="135"
                    Height="40"
                    BorderThickness="1"
                    Content="Auto fit window"
                    Style="{StaticResource Checkstyle}"
                    ToolTip="Resize window to image size">
                    <CheckBox.Background>
                        <SolidColorBrush x:Name="SetFitBrush" Color="{StaticResource BackgroundColorAlt}" />
                    </CheckBox.Background>
                </CheckBox>

                <CheckBox
                    x:Name="ToggleFill"
                    Canvas.Left="164"
                    Canvas.Top="61"
                    Width="136"
                    Height="40"
                    Content="Fill image height"
                    Style="{StaticResource Checkstyle}"
                    ToolTip="Fill image height to window">
                    <CheckBox.Background>
                        <SolidColorBrush x:Name="ToggleFillBrush" Color="{StaticResource BackgroundColorAlt}" />
                    </CheckBox.Background>
                </CheckBox>

                <CheckBox
                    x:Name="ToggleScroll"
                    Canvas.Left="164"
                    Canvas.Top="110"
                    Width="136"
                    Height="40"
                    Content="Toggle scroll"
                    Style="{StaticResource Checkstyle}">
                    <CheckBox.Background>
                        <SolidColorBrush x:Name="ToggleScrollBrush" Color="{StaticResource BackgroundColorAlt}" />
                    </CheckBox.Background>
                </CheckBox>

                <CheckBox
                    x:Name="ToggleLooping"
                    Canvas.Left="15"
                    Canvas.Top="110"
                    Width="135"
                    Height="40"
                    Content="Toggle looping"
                    Style="{StaticResource Checkstyle}">
                    <CheckBox.Background>
                        <SolidColorBrush x:Name="ToggleLoopBrush" Color="{StaticResource BackgroundColorAlt}" />
                    </CheckBox.Background>
                </CheckBox>



            </Canvas>

        </Border>
        <Rectangle
            Width="23"
            Height="2"
            Margin="0,-2,46,0"
            HorizontalAlignment="Right"
            Fill="{StaticResource BackgroundColorBrush}" />
