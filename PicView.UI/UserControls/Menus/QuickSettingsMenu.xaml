                </Button>

                <Button
                    x:Name="GoToPic"
                    Canvas.Left="155"
                    Width="105"
                    Height="50"
                    ToolTip="Go to image at specified index">
                    <Button.Background>
                        <SolidColorBrush x:Name="GoToPicBrush" Color="{StaticResource BackgroundColorAlt}" />
                    </Button.Background>
                    <Button.Content>
                        <Canvas>
                            <Label Canvas.Left="-45" Canvas.Top="-13">Go to:</Label>
                            <TextBox
                                x:Name="GoToPicBox"
                                Canvas.Left="2"
                                Canvas.Top="-11"
                                Width="42"
                                Panel.ZIndex="1"
                                AcceptsTab="False"
                                IsTabStop="False"
                                Text="42"
                                TextAlignment="Center" />
                        </Canvas>
                    </Button.Content>
                </Button>


                <Button
                    x:Name="InfoButton"
                    Canvas.Left="0"
                    Width="51"
                    Height="51"
                    Margin="0"
                    Padding="0"
                    BorderThickness="0"
